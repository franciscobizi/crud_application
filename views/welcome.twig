    <body >
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <h1 class="text-center text-muted text-uppercase">Crud Application</h1>
                        <div class="break"></div>
                    </div>        
                </div>
                <div class="row">
                    <div class="col-xs-4"></div>
                    <div class="col-xs-4">
                        <ul class="list-group">
                            <li class="list-group-item text-muted">
                               <h4>Autenticação</h4>  
                            </li>
                            <li class="list-group-item text-muted">
                                <div class="form-group">
                                      <div id='result'></div>
                                </div>
                                
                                <div class="form-group">
                                    <input type="text" id="mail" class="form-control" placeholder="E-mail" >
                                </div>
                                <div class="form-group">
                                    <input type="password" id="pass" class="form-control" placeholder="Senha" >
                                </div>
                                                
                            </li>
                            <li class="list-group-item text-muted">
                               <div class="form-group">
                                    <button  id="signin" class="btn btn-block">Entrar</button>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="col-xs-4"></div>
                </div>
                
            </div>
        </section >
        <!-- jQuery -->
        <script src="{{ base_url() }}/styles/js/jquery-3.2.1.min.js"></script>
        <!--script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script-->
        <!-- Bootstrap Core JavaScript -->
        <script src="{{ base_url() }}/styles/js/bootstrap.min.js"></script>
        
        <script type="text/javascript">
            // Authentication
            $("#signin").click(function(){
             
                var mail = $("#mail").val();
                var pass = $("#pass").val();
                                        
                $.ajax({
                                            
                    method: 'POST',
                    url: 'http://localhost/crud_application/signin',
                    dataType: 'json',
                    data: {email: mail, passw: pass},
                    success: function(data){
                        var field = data['resp'];
                        var msg = data['msg'];
                                                                                    
                        switch(field){
                                                            
                            case 'yes':
                                window.location="http://localhost/crud_application/user";
                            break;
                            case 'no':
                                $("#result").removeClass('text-success');
                                $("#result").addClass('text-danger text-center').text(msg);
                                            
                            break;
                            default:
                                                               
                        }
                                                      
                   }
                });
            });
        </script>

   
    </body>
